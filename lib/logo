#!/usr/bin/env bash
SEND_TO_KODI_LOGO_ASCII=$(cat << EOF
          .-====-.
          :+=====+-
          :=====-.   ..
    .=:  :===-.   .-==-.
  .===:  :+-.   .=======-
    :=+:  .:      :======:
      -.     .--.   :==:
          .-====-.
          .=+====+=.
            :====:
          SEND TO
  .   ..  .:::   :..:.  .
  =..--..=:..:=..*...-= =
  +==+  =:    -+.+    *.=
  =: .=:.=:..:=..*...-= =
  .   ..  .:::   :..:.  .
EOF
)

