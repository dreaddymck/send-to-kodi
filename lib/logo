#!/usr/bin/env bash
KODI_LOGO_ASCII=$(cat << EOF
                      :--.
                    .-====-.
                   :+=====+-
                   :=====-.   ..
              .=:  :===-.   .-==-.
            .===:  :+-.   .=======-
             :=+:  .:      :======:
               -.     .--.   :==:
                    .-====-.
                   .=+====+=.
                     :====:
                       ::
                    SEND TO
            .   ..  .:::   :..:.  .
            =..--..=:..:=..*...-= =
            +==+  =:    -+.+    *.=
            =: .=:.=:..:=..*...-= =
            .    :  .::.   ::::.  .
EOF
)